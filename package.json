{
  "name": "@decentralchain/ts-lib-crypto",
  "version": "2.0.0",
  "description": "Cryptographic library for the DecentralChain blockchain â€” key generation, signing, hashing, encoding.",
  "type": "module",
  "packageManager": "npm@11.11.0",
  "exports": {
    ".": {
      "browser": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.umd.min.js"
      },
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.mjs"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    },
    "./bytes": {
      "import": {
        "types": "./dist/bytes.d.ts",
        "default": "./dist/bytes.mjs"
      },
      "require": {
        "types": "./dist/bytes.d.cts",
        "default": "./dist/bytes.cjs"
      }
    }
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "sideEffects": false,
  "files": [
    "dist",
    "LICENSE",
    "README.md"
  ],
  "engines": {
    "node": ">=22"
  },
  "publishConfig": {
    "access": "public",
    "provenance": true
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Decentral-America/ts-lib-crypto.git"
  },
  "funding": {
    "type": "github",
    "url": "https://github.com/sponsors/Decentral-America"
  },
  "homepage": "https://github.com/Decentral-America/ts-lib-crypto#readme",
  "bugs": {
    "url": "https://github.com/Decentral-America/ts-lib-crypto/issues"
  },
  "scripts": {
    "build": "tsup",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "typecheck": "tsc --noEmit",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "check:publint": "publint",
    "check:exports": "attw --pack . --profile node16",
    "check:size": "size-limit",
    "validate": "npm run format:check && npm run lint && npm run typecheck && npm run test && npm run build && npm run check:publint && npm run check:exports && npm run check:size",
    "bulletproof": "npm run format && npm run lint:fix && npm run typecheck && npm run test",
    "bulletproof:check": "npm run format:check && npm run lint && npm run typecheck && npm run test",
    "prepare": "husky",
    "prepack": "npm run build",
    "postversion": "npm publish",
    "postpublish": "git push"
  },
  "lint-staged": {
    "*.ts": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.json": [
      "prettier --write"
    ]
  },
  "size-limit": [
    {
      "path": "./dist/index.mjs",
      "limit": "150 kB"
    }
  ],
  "keywords": [
    "decentralchain",
    "dcc",
    "crypto",
    "protocol",
    "binary",
    "cryptography",
    "signature",
    "blake2b",
    "keccak",
    "sha256",
    "base58",
    "ed25519",
    "curve25519"
  ],
  "author": "DecentralChain",
  "contributors": [
    {
      "name": "Yuriy Naydenov"
    },
    {
      "name": "Sergey Borzov",
      "email": "siemarell@gmail.com"
    }
  ],
  "license": "MIT",
  "dependencies": {
    "@noble/curves": "^2.0.1",
    "@noble/hashes": "^2.0.1",
    "js-sha256": "^0.11.1",
    "js-sha3": "^0.9.3",
    "node-forge": "^1.3.2"
  },
  "devDependencies": {
    "@arethetypeswrong/cli": "0.18.2",
    "@eslint/js": "10.0.1",
    "@size-limit/preset-small-lib": "12.0.0",
    "@types/node": "25.3.2",
    "@types/node-forge": "1.3.14",
    "@vitest/coverage-v8": "4.0.18",
    "eslint": "10.0.2",
    "eslint-config-prettier": "10.1.8",
    "globals": "17.3.0",
    "husky": "9.1.7",
    "lint-staged": "16.3.0",
    "prettier": "3.8.1",
    "publint": "0.3.17",
    "size-limit": "12.0.0",
    "tsup": "8.5.1",
    "typescript": "5.9.3",
    "typescript-eslint": "8.56.1",
    "vitest": "4.0.18"
  }
}
